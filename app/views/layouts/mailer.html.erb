<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <%= stylesheet_link_tag "mailer.css" %>
  </head>
  <body class="email-body">
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="email-container">
      <tr>
        <td class="align-left">
          <img src="<%= asset_pack_path('media/stylesheets/img/jally-logo-main.png') %>" class="jally-logo-img">
        </td>
      </tr>
      <tr>
        <td>
          <%= yield %>
        </td>
      </tr>

      <tr>
        <td>
          <%= yield :content_image %>
        </td>
      </tr>
    </table>
  </body>
</html>
