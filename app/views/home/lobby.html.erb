<div class="columns is-gapless">

  <div class="column is-full-height flex-column has-text-centered">
    <div class="jally-navbar jally-lobby-header">
      <a class="navbar-logo mx-5" href="/">
        <img src="<%= asset_pack_path('media/stylesheets/img/jally-logo-beta.svg') %>" class="jally-logo-img">
      </a>
      <div style="align-items: flex-end" class="is-flex">
        <div class="playspace-title is-inline-block">
          <%= @company.name %>'s Playspace
        </div>
        <div class="is-inline-block mx-2">
          <%= react_component('InviteTeammatesButton', {
              buttonText: "+ Add Teammates",
              playspaceName: @company.name,
              memberCount: @company.employees.count,
              inviteCode: @invite_code
          }) %>
        </div>
      </div>

      <div class="jally-avatar">
        <%= render partial: 'home/jally_avatar' %>
      </div>
    </div>

    <div class="greeting-text mt-3">
      <span style="color:#00D5E0">Howdy</span> <%= @user.first_name %> üëã
    </div>

    <!-- ******  Content ********** -->
    <div class="boxed-container jally-content is-flex center-items">
      <%= react_component('Lobby', {
          errorMessage: @error_message,
          notice: @notice,
          users: @selectable_users,
          activeSessions: @active_sessions,
          upcomingSessions: @upcoming_sessions
      }) %>
    </div>

    <!-- ******  Footer ********** -->
    <div class="has-text-centered jally-footer is-flex center-items">
      Made with ‚ù§Ô∏è by team Jally
    </div>
  </div>
</div>

