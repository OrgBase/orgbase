<% if current_user.present? %>
  <%= react_component(
    'JallyAvatar',
    {
        name: current_user.name,
        size: 40,
        round: '0.625rem',
        playspaceName: current_user.company&.name,
        memberCount: current_user.company&.employees&.count,
        inviteCode: current_user.company&.invite_code
    })
  %>
<% end %>