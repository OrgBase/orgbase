<div class="columns is-centered is-mobile">
  <div class="column is-three-quarters-mobile is-two-thirds-tablet
    is-half-desktop is-one-third-widescreen is-one-third-fullhd has-text-centered">
    <h1 class="title">Sign in to Jally</h1>

    <%= form_with url: passwordless_link_path, method: :post, local: true do |f| %>
      <% flash.each do |message_type, message| %>
        <div class="notification is-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>

      <div class="field">
        <div class="control has-icons-left">
          <%= f.email_field :email, autofocus: true,
                            autocomplete: "email", class: "input",
                            required: 'true', placeholder: "name@work-email.com" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign in with email", class: "button jally-button is-fullwidth mb-3" %>
      </div>
    <% end %>

    <div class="notification is-primary is-light">
      ⚡ We’ll email you a magic link for signing in without a password. Or you can <%= link_to "login manually", password_login_path %>.<br />
    </div>

    <div>
      Don't have an account yet? <a href="<%= passwordless_link_signup_path %>">Sign up</a>
    </div>
  </div>
</div>