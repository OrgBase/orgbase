<div class="columns is-centered is-mobile">
  <div class="column is-three-quarters-mobile is-two-thirds-tablet
    is-half-desktop is-one-third-widescreen is-one-third-fullhd has-text-centered">
    <h1 class="title">Sign up to Jally</h1>

    <%= form_with url: signup_passwordless_link_path, method: :post, local: true do |f| %>
      <% flash.each do |message_type, message| %>
        <div class="notification is-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>

      <div class="field">
        <div class="control has-icons-left">
          <%= f.email_field :email, autofocus: true,
                            autocomplete: "email",
                            class: "input", required: 'true',
                            placeholder: "name@your-company.com" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Continue with email", class: "button jally-button is-fullwidth mb-3" %>
      </div>
    <% end %>

    <div class="notification is-primary is-light">
      ⚡ We’ll send you a magic link to confirm your email address.
    </div>

    <div>
      Already have an account? <a href="<%= passwordless_link_login_path %>">Login</a>
    </div>

  </div>
</div>